<div class='mt-4'>
    <h4>Editing Restaurant</h4>

    <div class="row justify-content-left">
        <%= simple_form_for(@restaurant) do |t| %>

        <div class='col-6 '>
            <%= t.input :name %>
        </div>

        <div class='col-6'>
            <%= t.input :address %>
        </div>

        <div class='col-6'>
            <%= t.input :phone_number %>
        </div>

        <div class='col-6'>
            <%= t.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
        </div>
    </div>

        <div class="form-actions">
            <%= t.submit class: 'btn btn-success' %>
        </div>
    <% end %>
</div>